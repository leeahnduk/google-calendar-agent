# =============================================================================
# Google Cloud Configuration
# =============================================================================

# Your Google Cloud Project ID
GOOGLE_CLOUD_PROJECT=your-project-id

# Google Cloud region (us-central1 recommended for Vertex AI)
GOOGLE_CLOUD_LOCATION=us-central1

# Path to your service account JSON key file
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# =============================================================================
# Google Cloud Storage
# =============================================================================

# Name of your GCS bucket for storing generated images
GCS_BUCKET_NAME=your-gcs-bucket-name

# =============================================================================
# AI Model Configuration
# =============================================================================

# Whether to use Vertex AI (recommended: TRUE for production)
GOOGLE_GENAI_USE_VERTEXAI=TRUE

# Google API Key (only if not using Vertex AI)
GOOGLE_API_KEY=your-google-api-key

# =============================================================================
# Optional: Additional Service Configuration
# =============================================================================

# For YouTube API access (if using video processing features)
# YOUTUBE_API_KEY=your-youtube-api-key

# For BigQuery access (if using analytics features)
# BQ_DATASET=your-dataset
# BQ_TABLE=your-table

# =============================================================================
# Development Settings
# =============================================================================

# Set to development for local testing
# ENVIRONMENT=development

# Enable debug logging
# DEBUG=true

# Custom temporary directory for image processing
# TEMP_DIR=/tmp/image_processing
